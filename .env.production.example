# =============================================================================
# Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in your values
# DO NOT commit .env.production to version control!

# =============================================================================
# LLM Configuration
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-your-production-key-here
LLM_MODEL=claude-sonnet-4-5  # Use sonnet for production quality

# =============================================================================
# Obsidian Vault Configuration
# =============================================================================
# IMPORTANT: Use absolute path to your production vault
OBSIDIAN_VAULT_PATH=/path/to/production/vault

# =============================================================================
# Database Configuration
# =============================================================================
# Use a strong password for production!
POSTGRES_PASSWORD=your-strong-password-here

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=Obsidian AI Agent
VERSION=1.0.0
ENVIRONMENT=production
LOG_LEVEL=INFO
API_PORT=8123

# CORS - allowed origins for cross-origin requests
ALLOWED_ORIGINS=["http://localhost:3000","app://obsidian.md"]

# =============================================================================
# Docker Configuration
# =============================================================================
DOCKER_IMAGE=yourusername/obsidian-ai-agent:latest

# =============================================================================
# Monitoring (Optional)
# =============================================================================
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
# ENABLE_METRICS=true
# METRICS_PORT=9090

# =============================================================================
# Security (Optional)
# =============================================================================
# API_KEY_ROTATION_DAYS=90
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_REQUESTS_PER_MINUTE=60
